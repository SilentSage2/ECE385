// Main.c - makes LEDG0 on DE2-115 board blink if NIOS II is set up correctly
// for ECE 385 - University of Illinois - Electrical and Computer Engineering
// Author: Zuofu Cheng

int main()
{
	int i = 0;
	volatile unsigned int *LED_PIO = (unsigned int*)0x60; //make a pointer to access the PIO block
	volatile unsigned int *SW_PIO = (unsigned int*)0x30;
	volatile unsigned int *KEY2 = (unsigned int*)0x50; //Reset
	volatile unsigned int *KEY3 = (unsigned int*)0x40; //Accumulate
	*LED_PIO = 0; //clear all LEDs
	while ( 1 ) //infinite loop
	{
		if(*KEY2 == 0){
			for (i = 0; i < 100000; i++); //software delay
			*LED_PIO = 0;
		}
		else if (*KEY3 == 0){
			volatile unsigned int sum = *LED_PIO + *SW_PIO;
			if(sum > 255)
				sum -= 255;
			*LED_PIO = sum;
		}
//		for (i = 0; i < 100000; i++); //software delay
//		*LED_PIO |= 0x3; //set LSB
//		for (i = 0; i < 100000; i++); //software delay
//		*LED_PIO &= ~0x3; //clear LSB
	}
	return 1; //never gets here
}
